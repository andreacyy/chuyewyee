<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CountryListFragment">

    <fragment
        android:id="@+id/CountryListFragment"
        android:name="com.example.chuyewyee.presentation.list.CountryListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_country_list">

        <action
            android:id="@+id/navigateToCountryDetailFragment"
            app:destination="@id/CountryDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/CountryDetailFragment"
        android:name="com.example.chuyewyee.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_pokemon_detail">

        <action
            android:id="@+id/navigateToCountryDetailFragment"
            app:destination="@id/CountryDetailFragment" />
    </fragment>
</navigation>